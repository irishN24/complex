#include <iostream>
#include <math.h>
#include <sstream>
#include <string>

using namespace std;

class complex {
    double re, im;
public:
    complex(double Re = 0, double Im = 0) : re(Re), im(Im) {}
    double getRe() { //++
        return re;
    }
    void setRe(double Re) { //++
        re = Re;
    }
    double getIm() { //++
        return im;
    }
    void setIm(double Im) { //++
        im = Im;
    }
    bool operator == (const complex& c2) { //сравнение (равенство) ++
        return (re == c2.re) && (im == c2.im);
    }
    bool operator != (const complex& c2) { // сравнение (неравенство) ++
        return (re != c2.re) || (im != c2.im);
    }
    double mod(); //++
    operator char* () {// преобразует комплексное число в строку ++
        static char buff[100];
        snprintf(buff, sizeof(buff), "%g + (%g)i", re, im);
        return buff;
    }
    complex operator - () { // возвращает комплексно сопряженное число++
        if (im > 0) {
            return complex(re, -im);
        }
        else {
            return complex(re, im * (-1));
        }
    }
    complex operator += (const complex& c2) {
        re += c2.re;
        im += c2.im;
        return *this;
    }
    complex operator -= (const complex& c2) {
        re -= c2.re;
        im -= c2.im;
        return *this;
    }
    complex operator *= (const complex& c2) {
        double Newre = ((re * c2.re) - (im * c2.im));
        double Newim = ((re * c2.im) + (im * c2.re));
        re = Newre;
        im = Newim;
        return *this;
    }
    complex operator /= (const complex& c2) {
        double sopra = (c2.re * c2.re) + (c2.im * c2.im);
        double Newre = (re * c2.re + im * c2.im) / sopra;
        double Newim = (im * c2.re - re * c2.im) / sopra;
        re = Newre;
        im = Newim;
        return *this;
    }
    const complex operator + (const complex& c2) const { //сложение ++
        return complex(*this) += c2;
    }
    const complex operator - (const complex& c2) { //вычитание++
        return complex(*this) -= c2;
    }
    const complex operator * (const complex& c2) const{ //умножение ++
        return complex((re * c2.re) - (im * c2.im),(re * c2.im) + (im * c2.re));
    }
    const complex operator / (const complex& c2) {
        double sopra = (c2.re * c2.re) + (c2.im * c2.im);//деление ++
        return complex((re * c2.re + im * c2.im) / sopra, (im * c2.re - re * c2.im) / sopra);
    }
    friend istream& operator >> (istream& is, complex& c) {
        is >> c.re >> c.im;
        return is;
    }
    friend ostream& operator << (ostream& os, const complex& c) {
        os << "(" << c.re << "," << c.im << ")";
        return os;
    }
    void complexInput(); //++
    void complexPrint(); //++
};
int main()
{
    complex c1, c2(-7, 6);
    cout << "Enter first complex: ";
    c1.complexInput(); //(3,6)
    cout << "c1 = " << c1 << "\nc2 = " << c2;
    if (c1 == c2)
        cout << "\nComplex numbers are equal\n";
    if (c1 != c2)
        cout << "\nComplex numbers are not equal\n"; //++
    c1.setRe(2); //(2.6)
    c2.setIm(5); //(-7,5)
    cout << "c1 re change:" << c1.getRe() << "\nc2 im change:" << c2.getIm();
    cout << "\nModulus of a complex 1: " << c1.mod() << "\n"; // 6.324555..
    cout << "c1 + c2 = " << c1 + c2 << "\n"; //(-5. 11)
    cout << "c1 - c2 = " << c1 - c2 << "\n"; // (9.1)
    cout << "c1 * c2 = " << c1 * c2 << "\n"; //(-44.-32)
    cout << "c1 / c2 = " << c1 / c2 << "\n"; // 0.21621-0.70270i
    cout << "-c1 = " << -c1 << "\n"; //(2.-6)
    complex c3(6, 8);
    c3 += c1;
    c3.complexPrint(); //(8+14i)
    complex c4(12, 7);
    c4 -= c2;
    c4.complexPrint(); //(19 + 2i)
    complex c5(15, 3);
    c5 *= c2;
    c5.complexPrint(); // -120+54i
    complex c6(21, 18);
    c6 /= c2;
    cout << (char*)c6; // -0.77027-3.12162i
    return 0;
}

double complex::mod() {// возвращает модуль комплексного числа ++
    double res;
    res = sqrt((re * re) + (im * im));
    return res;
}
void complex::complexInput() {
    cout << "re = ";
    cin >> re;
    cout << "im = ";
    cin >> im;
}
void complex::complexPrint() {
    cout << re << "+(" << im << "i)" << "\n";
}
